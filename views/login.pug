doctype.html

html
    include head.html
    style
        include ../public/stylesheets/header.css        
        include ../public/stylesheets/mix.css
    body
        div#prog
        form#input(
            action="/login"
            method="post"
            class="form-create"
        )
            .form-group
                h2 Login 

                if err == 1
                    span(
                        style="color: red; display:block;"
                    ) Account not found
                if err == 2
                    span(
                            style="color: red; display:block;"
                        ) All fields are required !

                label Login
                input#login(
                    type="text"
                    name="login"
                    class="form-control"
                )
                .form-group
                    label Password
                    input#password(
                        type="password"
                        name="password"
                        class="form-control"
                    )
                .form-group
                    button#login(
                        type="submit"
                        class="btn btn-primary"
                    ) login
                    a.back(
				        href="../"	
			        ) voltar

